.mensaje
	padding .5rem
	background-color #ccc
	color #333
	border-radius 20px
	margin 1rem 0
	position relative
	
	p
		margin 0
		position relative
		z-index 2
	
	i
		text-align right
		font-size .8rem
		font-style normal
		display block

	&:before
		position absolute
		bottom -6px
		left -37px
		content ''
		width 52px
		display block
		height 52px
		border-radius 50%
		box-shadow 15px 15px 0 0 #ccc
		transform rotate(-35deg)


.fechita
	padding .2rem .5rem
	display block
	margin .2rem auto
	font-size .8rem
	background-color yellow
	color #333
	border-radius 20px
	text-align center
	width 80px
extend ../Template/template

block vars
	- var pagina = { name: 'formulario', fin: 'consumo'}
	- var menuPrincipal = true


block content
	h3 Crea tu perfil
	form(action="").form__datos
		.form__group
			label
				span edad
				select(name="Edad")
					option(value="") 10 - 18
					option(value="") 18 -30
					option(value="") 30 -45
		.form__group
			span Hijos
			label
				| Si
				input(type="radio" value="si")
				| No
				input(type="radio" value="no")
			select(name="Cuantos")
				option(value="") 1 - 3
				option(value="") 3 - 5
				option(value="") 5+
		.form__group
			label ¿Vives aqui?
				select(name="")
					option(value="") México
					option(value="") Guadalajara
					option(value="") Torreón
					option(value="") Sinaloa
		.form__group
			label ¿Cuántos hijos querrias tener?
				select(name="hijos")
					option(value="") 1 - 3
					option(value="") 3 - 5
					option(value="") 5+
		.form__group
			label ¿Con cuantas personas vives?
				select(name="personas")
					option(value="") 1 - 3
					option(value="") 3 - 5
					option(value="") 5+a
.impacto__content
	position relative
	width 100%
	

	.mensaje__emision

		position absolute
		top 0
		left 0
		display none		
		&.active
			display block
			
			img
				width 100%

	.emision__info
		background rgb(135,224,253)
		background -moz-linear-gradient(45deg,  rgba(135,224,253,1) 0%, rgba(83,203,241,1) 40%, rgba(5,171,224,1) 100%)
		background -webkit-linear-gradient(45deg,  rgba(135,224,253,1) 0%,rgba(83,203,241,1) 40%,rgba(5,171,224,1) 100%)
		background linear-gradient(45deg,  rgba(135,224,253,1) 0%,rgba(83,203,241,1) 40%,rgba(5,171,224,1) 100%)
		padding 1rem
		color #333
		border-radius 20px
		margin 1rem auto -1rem auto
		position relative
		z-index 10
		
		&:after
			content ''
			position absolute
			bottom -48px
			left 2rem
			background-color 
			width 0
			height 0
			border-left 12px solid transparent
			border-right 12px solid transparent
			border-top 50px solid rgb(135,224,253)
		p
			margin 0


.impacto__menu
	ul
		text-align center
		li
			display inline-block
			vertical-align bottom
			margin 0 .5rem
			
			a
				display block
				color #333
				width 100%
				height 100%
				background-color #ccc
				padding .3rem
				text-align center
				border-radius 5px
				text-shadow none
		
		.active
			a
				background-color yellow
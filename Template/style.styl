.semarnat
	img
		width 100%

.iconos__menu
	background-color rgba(30,30,30,.5)
	
	li		
		width 30px
		height 30px
		a
			display block
			width 100%
			height 100%
			background-repeat no-repeat
			background-position top center
			
			&:hover,
			&.active
				background-position bottom center
		&:first-child
			a
				background-image url('../images/menu-app/icono-settings.png')

		&:nth-child(2)
			a
				background-image url('../images/menu-app/icono-compartir.png')
		&:nth-child(3)
			a
				background-image url('..//images/menu-app/icono-pencil.png')

		&:nth-child(4)
			a
				background-image url('..//images/menu-app/icono-smile.png')
		&:nth-child(5)
			a
				background-image url('../images/menu-app/icono-chart.png')

		&:nth-child(6)
			a
				background-image url('../images/menu-app/icono-mensajes.png')
		&:last-child
			a
				background-image url('../images/menu-app/icon-ware.png')

.botonera
	text-align right

.clearfix
	clear both

